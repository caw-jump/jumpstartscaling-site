---
interface Props {
  facts: { label: string; value: string }[];
  columns?: 2 | 3;
}

const { facts, columns = 3 } = Astro.props;
const gridClass = columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-3';
---
<div class={`grid grid-cols-1 ${gridClass} gap-4 tools-facts-grid`}>
  {facts.map((fact) => (
    <div class="glass-card p-6">
      <div class="text-sm tools-fact-label mb-2">{fact.label}</div>
      <div class="text-xl font-bold tools-fact-value">{fact.value}</div>
    </div>
  ))}
</div>
