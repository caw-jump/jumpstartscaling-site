---
interface Props {
	date: Date;
    class?: string;
}

const { date: rawDate, class: className } = Astro.props;
const date = new Date(rawDate);

---

<time datetime={date.toISOString()} class={className}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
