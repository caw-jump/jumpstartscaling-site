---
interface Props {
  title?: string;
  variant?: 'default' | 'split' | 'hero';
  subtitle?: string;
}
const { title, variant = 'default', subtitle } = Astro.props;
---

<section class={`gc-wrapper py-24 ${variant === 'hero' ? 'bg-atmospheric' : ''}`}>
  <div class={`container mx-auto px-6 ${variant === 'split' ? 'grid lg:grid-cols-12 gap-12 items-start' : ''}`}>
    
    {variant === 'split' ? (
      <>
        <div class="lg:col-span-5 lg:sticky lg:top-32">
          {title && <h2 class="text-4xl md:text-5xl font-black gradient-text mb-6 leading-tight">{title}</h2>}
          {subtitle && <p class="text-xl text-white/60 font-medium leading-relaxed">{subtitle}</p>}
          <div class="mt-8 w-24 h-1 bg-gradient-to-r from-[#E8C677] to-transparent rounded-full opacity-50"></div>
        </div>
        <div class="lg:col-span-7 prose prose-xl">
          <slot />
        </div>
      </>
    ) : variant === 'hero' ? (
      <div class="max-w-5xl mx-auto text-center py-12">
        {title && <h2 class="text-5xl md:text-7xl font-black gradient-text mb-8 leading-[0.9] tracking-tighter">{title}</h2>}
        <div class="prose prose-2xl mx-auto text-white/90">
          <slot />
        </div>
      </div>
    ) : (
      <div class="glass-card p-12 md:p-16 max-w-5xl mx-auto border-white/5 bg-white/[0.02]">
        {title && <h2 class="text-3xl md:text-4xl font-black gradient-text mb-12">{title}</h2>}
        <div class="prose prose-lg max-w-none">
          <slot />
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .bg-atmospheric {
    background: #0B0B0F;
    background-image: radial-gradient(circle at 20% 0%, rgba(232, 198, 119, 0.05), transparent 40%),
                radial-gradient(circle at 80% 100%, rgba(15, 15, 25, 0.5), transparent 40%);
    position: relative;
  }
  .bg-atmospheric::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(232, 198, 119, 0.2), transparent);
  }
</style>
