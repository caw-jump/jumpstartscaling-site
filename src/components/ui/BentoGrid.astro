---
export interface Props { items: {title:string;desc:string;link:string}[] }
const { items } = Astro.props
---
<div class="bento-grid grid grid-cols-1 md:grid-cols-3 gap-6 my-20 max-w-6xl mx-auto">
  {items.map((item, i) => (
    <a href={item.link} class={`glass-card block p-8 hover:border-[var(--accent)] hover:-translate-y-1 transition-all duration-300 bento-item-${i % 4}`}>
      <h3 class="text-2xl font-bold mb-4 gradient-text">{item.title}</h3>
      <p class="text-[var(--text-secondary)]">{item.desc}</p>
    </a>
  ))}
</div>
<style>
  @media (min-width: 768px) {
    .bento-item-0 { grid-column: span 2; }
    .bento-item-3 { grid-column: span 2; }
  }
</style>
