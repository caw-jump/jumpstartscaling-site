---
// src/pages/index.astro - Updated homepage using BaseLayout (consistent particles, nav, spacing)
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/ui/Hero.astro';
import ServiceTeaser from '../components/ui/ServiceTeaser.astro';
import ScalingSurvey from '../components/interactivity/ScalingSurvey.tsx';
import CTA from '../components/ui/CTA.astro';
import GlassCard from '../components/ui/GlassCard.astro';
import AnimatedSection from '../components/ui/AnimatedSection.astro';
import ScrollRevealGrid from '../components/ui/ScrollRevealGrid.tsx';
import ImagePlaceholder from '../components/ui/ImagePlaceholder.tsx';

const services = (await getCollection('services')).sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
---

<BaseLayout title="Jumpstart Scaling" description="Growth engineering for companies serious about predictable revenue." palette="gold" fluid={true}>
  
  <Hero 
    title="Growth Engineering." 
    subtitle="We build the infrastructure that turns ad spend into predictable revenue. Stop guessing, start scaling." 
    variant="full"
  />

  <section class="section dark relative z-10 -mt-20">
    <div class="container mx-auto px-6">
      <AnimatedSection delay={200}>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="glass-card p-8 hover:-translate-y-2 transition duration-300">
                <div class="text-4xl mb-4">ğŸš€</div>
                <h3 class="text-xl font-bold mb-2 text-white">Paid Acquisition</h3>
                <p class="text-white/60 text-sm">Engineered media buying that eliminates wasted spend and scales winners.</p>
            </div>
            <div class="glass-card p-8 hover:-translate-y-2 transition duration-300">
                <div class="text-4xl mb-4">ğŸ—ï¸</div>
                <h3 class="text-xl font-bold mb-2 text-white">Funnel Architecture</h3>
                <p class="text-white/60 text-sm">Conversion systems designed to turn cold traffic into qualified opportunities.</p>
            </div>
            <div class="glass-card p-8 hover:-translate-y-2 transition duration-300">
                <div class="text-4xl mb-4">âš™ï¸</div>
                <h3 class="text-xl font-bold mb-2 text-white">Revenue Operations</h3>
                <p class="text-white/60 text-sm">CRM automation that ensures no lead is ever left behind.</p>
            </div>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <section class="section light">
    <div class="container mx-auto px-6 max-w-6xl">
       <AnimatedSection client:visible delay={400}>
          <div class="grid md:grid-cols-2 gap-12 items-center">
             <div class="p-8 md:p-12">
                <h2 class="text-3xl md:text-4xl font-black text-black mb-6">Chaos vs. Engineering</h2>
                <h3 class="text-xl text-black/60 font-medium mb-6">Why random acts of marketing fail.</h3>
                <div class="prose prose-lg text-black/80 leading-relaxed">
                  <p>Most companies treat growth as a series of experiments. They launch ads, write blog posts, and hire agencies in silos. This creates a fragile system where revenue is unpredictable and dependent on luck.</p>
                  <p>We replace chaos with engineering. We build infrastructureâ€”data attribution, CRM automation, and funnel architectureâ€”that turns growth into a predictable mathematical output.</p>
                </div>
              </div>

              <!-- Chaos vs Engineering Visual -->
              <div class="rounded-2xl overflow-hidden shadow-2xl border border-black/10 relative aspect-video bg-black">
                 <video 
                    class="absolute inset-0 w-full h-full object-cover"
                    autoplay 
                    loop 
                    muted 
                    playsinline
                 >
                    <source src="/assets/chaosvsorder.mp4" type="video/mp4" />
                 </video>
                 <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent pointer-events-none"></div>
              </div>
          </div>
       </AnimatedSection>
    </div>
  </section>

   <!-- Services Grid -->
   <section id="services" class="section dark">
      <div class="container mx-auto px-6 max-w-6xl">
          <AnimatedSection delay={600}>
            <div class="text-center mb-16">
                 <h2 class="text-4xl md:text-5xl font-black mb-6 gradient-text">The Growth Stack</h2>
                 <p class="text-xl text-white/60 max-w-2xl mx-auto">The six core components of a scalable revenue engine.</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {services.map(service => (
                    <ServiceTeaser 
                        slug={`/services/${service.id.replace(/\.mdx?$/, '')}`}
                        title={service.data.title}
                        description={service.data.description}
                    />
                ))}
            </div>
          </AnimatedSection>
      </div>
   </section>

   <!-- Calculators Teaser (Light Section) -->
   <section class="section light py-20">
      <div class="container mx-auto px-6 max-w-6xl">
         <AnimatedSection delay={200}>
            <div class="text-center mb-16">
               <h2 class="text-4xl md:text-5xl font-black mb-6 text-black tracking-tighter">Free Growth Tools</h2>
               <p class="text-xl text-black/60 max-w-2xl mx-auto">Benchmark your metrics against the top 1% of SaaS companies.</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Card 1: CAC -->
                <a href="/resources/calculators#cac-calculator" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">ğŸ’°</div>
                    <h3 class="text-xl font-bold mb-2 text-black">CAC Calculator</h3>
                    <p class="text-black/60 text-sm">Calculate your true cost to acquire a customer and compare with industry benchmarks.</p>
                </a>
                <!-- Card 2: LTV -->
                <a href="/resources/calculators#ltv-calculator" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">ğŸ’</div>
                    <h3 class="text-xl font-bold mb-2 text-black">LTV Calculator</h3>
                    <p class="text-black/60 text-sm">Determine your Customer Lifetime Value and LTV:CAC ratio.</p>
                </a>
                <!-- Card 3: Churn -->
                <a href="/resources/calculators#churn-calculator" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">ğŸ“‰</div>
                    <h3 class="text-xl font-bold mb-2 text-black">Churn Analysis</h3>
                    <p class="text-black/60 text-sm">Measure customer attrition and identify retention leaks.</p>
                </a>
                <!-- Card 4: ROAS -->
                <a href="/resources/calculators#break-even-calculator" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">âš–ï¸</div>
                    <h3 class="text-xl font-bold mb-2 text-black">Break-Even ROAS</h3>
                    <p class="text-black/60 text-sm">Find the exact ad spend efficiency needed to be profitable.</p>
                </a>
                <!-- Card 5: MRR Forecast -->
                <a href="/resources/calculators#mrr-forecast" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">ğŸ“Š</div>
                    <h3 class="text-xl font-bold mb-2 text-black">MRR Forecast</h3>
                    <p class="text-black/60 text-sm">Project recurring revenue growth over the next 12 months.</p>
                </a>
                <!-- Card 6: Email ROI -->
                <a href="/resources/calculators#email-roi-calculator" class="group block p-8 bg-white border border-black/5 rounded-2xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                    <div class="text-3xl mb-4 p-3 bg-black/5 w-fit rounded-xl group-hover:bg-[#E8C677] group-hover:text-black transition-colors">ğŸ“§</div>
                    <h3 class="text-xl font-bold mb-2 text-black">Email ROI</h3>
                    <p class="text-black/60 text-sm">Measure the profitability of your CRM and email automation.</p>
                </a>
            </div>
            <div class="text-center mt-12">
                 <a href="/resources/calculators" class="inline-flex items-center gap-2 font-bold hover:text-[#E8C677] transition relative group">
                    View All Calculators 
                    <span class="group-hover:translate-x-1 transition-transform">â†’</span>
                    <div class="absolute -bottom-1 left-0 w-0 h-[2px] bg-[#E8C677] group-hover:w-full transition-all duration-300"></div>
                 </a>
            </div>
         </AnimatedSection>
      </div>
   </section>

  <section class="section dark py-32">
    <div class="container text-center">
      <h2 class="mb-12">
        <span class="text-5xl font-black gradient-text tracking-tighter">Get Your Growth Audit</span>
      </h2>
      <p class="text-xl md:text-2xl text-white/60 mb-16 max-w-3xl mx-auto">
        Answer 5 quick questions. We'll map your biggest scaling bottleneck and show you how to fix it.
      </p>
      <div class="max-w-5xl mx-auto">
        <ScalingSurvey client:load />
      </div>
    </div>
  </section>

  <section class="section light">
      <CTA />
  </section>
</BaseLayout>