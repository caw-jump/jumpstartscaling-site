---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AtmosphereParticles from '../../components/visuals/AtmosphereParticles.astro';
import TechStackOrbit from '../../components/visuals/TechStackOrbit.astro';
import GrowthChart from '../../components/visuals/GrowthChart.astro';
import Clarity from '../../components/analytics/Clarity.astro';

const title = "Jumpstart Scaling - Predictable Revenue Systems";
const description = "Predictable revenue systems for businesses doing $1M-$10M ARR";
---

<BaseLayout title={title} description={description} palette="gold" fluid={true}>
  <Clarity />
  
  <style>
    .gold-text {
      background: linear-gradient(135deg, var(--accent), #FFD700);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* Grid Utilities */
    .grid-2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .grid-services {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2.5rem;
    }

    /* Cards */
    .card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(201, 169, 97, 0.2);
      border-radius: 16px;
      padding: 3rem;
      transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .card:hover {
      border-color: var(--accent);
      transform: translateY(-5px);
    }

    @media (max-width: 768px) {
      .grid-2, .grid-services { grid-template-columns: 1fr; }
      h1 { font-size: 2.5rem !important; }
    }
  </style>

  <section class="hero min-h-[60vh] flex items-center justify-center text-center relative pt-32 pb-12">
    <div class="absolute inset-0 opacity-15 pointer-events-none">
      <AtmosphereParticles />
    </div>
    <div class="container mx-auto px-6 max-w-7xl">
      <h1 class="text-5xl md:text-7xl font-black leading-tight mb-6 text-white">
        Stop Guessing.<br>
        Start <span class="gold-text">Scaling.</span>
      </h1>
      <p class="text-2xl text-[#C9A961] max-w-3xl mx-auto">
        {description}
      </p>
    </div>
  </section>

  <section class="bg-black py-12">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid-2">
        <div>
          <h2 class="text-4xl font-black mb-4 text-white">The Ecosystem</h2>
          <p class="text-gray-300 mb-8 text-lg">We supercharge your stack.</p>
          <div class="bg-white/5 p-8 rounded-xl border border-white/10">
             <TechStackOrbit />
          </div>
        </div>
        <div>
          <h2 class="text-4xl font-black mb-4 text-white">The Result</h2>
          <p class="text-gray-300 mb-8 text-lg">Exponential velocity.</p>
          <div class="bg-white/5 p-8 rounded-xl border border-white/10">
            <GrowthChart />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white/5">
    <div class="container mx-auto px-6 max-w-7xl">
      <h2 class="text-center text-4xl font-black mb-12 text-white">How We Scale</h2>
      <div class="grid-services">
        <div class="card">
          <h3 class="text-2xl text-[#FFD700] mb-4 font-bold">Paid Acquisition</h3>
          <p class="text-gray-300 mb-6">Scientific testing across Google, Meta, and LinkedIn.</p>
          <a href="/services/paid-acquisition" class="text-[#C9A961] font-bold hover:text-white transition-colors">Explore &rarr;</a>
        </div>
        <div class="card">
          <h3 class="text-2xl text-[#FFD700] mb-4 font-bold">Funnel Architecture</h3>
          <p class="text-gray-300 mb-6">Convert cold traffic into booked calls.</p>
          <a href="/services/funnel-architecture" class="text-[#C9A961] font-bold hover:text-white transition-colors">Explore &rarr;</a>
        </div>
        <div class="card">
          <h3 class="text-2xl text-[#FFD700] mb-4 font-bold">CRM Automations</h3>
          <p class="text-gray-300 mb-6">Nurture leads 24/7 with intelligent pipelines.</p>
          <a href="/services/crm-transformation" class="text-[#C9A961] font-bold hover:text-white transition-colors">Explore &rarr;</a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 text-center">
    <div class="container mx-auto px-6">
      <a href="/services/paid-acquisition#survey" class="inline-block py-6 px-16 bg-gradient-to-r from-[#C9A961] to-[#FFD700] text-black font-black text-xl rounded-lg hover:transform hover:scale-105 transition-transform shadow-[0_0_30px_rgba(201,169,97,0.3)]">
        GET YOUR BLUEPRINT
      </a>
    </div>
  </section>

</BaseLayout>
