        </div>
      </div>
      <div class="lg:order-1 glass-card p-12">
        <BreakEvenCalculator client:visible />
      </div>
    </div>
  </section>

  <!-- Retention & LTV Section Header (Dark) -->
  <section id="retention" class="section dark py-20">
    <div class="container text-center max-w-6xl mx-auto">
      <h2 class="text-5xl md:text-7xl font-black gradient-text mb-12">
        Retention & Lifetime Value Tools
      </h2>
      <p class="text-2xl text-white/90 mb-16 max-w-4xl mx-auto">
        The highest-ROI activity in any business? Keeping customers longer.
      </p>
    </div>
  </section>

  <!-- LTV (Light) -->
  <section id="ltv-calculator" class="section light py-20">
    <div class="container max-w-6xl mx-auto grid lg:grid-cols-2 gap-16 items-start">
