        </div>
        <CohortAnalysisCalculator client:visible />
      </div>
    </div>
  </section>

  <!-- Forecasting Section Header (Dark) -->
  <section id="forecasting" class="section dark py-20">
    <div class="container text-center max-w-6xl mx-auto">
      <h2 class="text-5xl md:text-7xl font-black gradient-text mb-12">
