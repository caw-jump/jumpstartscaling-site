    </div>
  </section>

  <!-- Category Teasers (Light) -->
  <section id="acquisition" class="section light py-20">
    <div class="container max-w-7xl mx-auto">
      <h2 class="text-5xl font-black text-center mb-16">Acquisition & Efficiency Tools</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
