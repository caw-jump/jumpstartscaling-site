import BaseLayout from '../../layouts/BaseLayout.astro';
import CACCalculator from '../../components/calculators/CACCalculator.tsx';
import ChurnCalculator from '../../components/calculators/ChurnCalculator.tsx';
import EmailROICalculator from '../../components/calculators/EmailROICalculator.tsx';
import BreakEvenCalculator from '../../components/calculators/BreakEvenCalculator.tsx';
