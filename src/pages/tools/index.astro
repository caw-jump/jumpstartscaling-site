---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const toSlug = (id: string) => id.replace(/\.mdx$/, '');
const allTools = await getCollection('tools');

const categories = [
  { id: 'finance', label: 'Finance & Valuation', emoji: 'ðŸ’°' },
  { id: 'ecommerce', label: 'E-Commerce & Retail', emoji: 'ðŸ›’' },
  { id: 'loyalty', label: 'Loyalty & Travel', emoji: 'âœˆï¸' },
  { id: 'labor', label: 'Labor & Economics', emoji: 'ðŸ“Š' },
  { id: 'ai', label: 'AI & Tech', emoji: 'ðŸ¤–' },
];

const toolsByCategory = categories.reduce((acc, cat) => {
  acc[cat.id] = allTools.filter((t) => t.data.category === cat.id);
  return acc;
}, {} as Record<string, typeof allTools>);
---

<BaseLayout
  title="News-Inspired Calculators | Jumpstart Scaling"
  description="Model the stories shaping markets. 10 interactive calculators: startup valuation, e-commerce growth, Fed rates, AI royalties & more. Free, instant, no signup."
  canonical="/tools"
  fluid={true}
>
  <!-- Hero -->
  <section class="section dark py-20">
    <div class="container text-center max-w-5xl mx-auto">
      <h1 class="text-5xl md:text-7xl font-black gradient-text mb-12 leading-tight">
        News-Inspired Calculators
      </h1>
      <p class="text-2xl md:text-3xl text-white/90 mb-8 max-w-4xl mx-auto">
        Model the stories shaping markets â€” OpenAI funding, Amazon vs Walmart, Fed rates, AI music, and more.
      </p>
      <p class="text-xl text-white/70 mb-12">
        No signup â€¢ No data saved â€¢ Real-time calculations in your browser
      </p>
      <div class="flex flex-wrap justify-center gap-4" id="category-filter">
        {categories.map((cat) => (
          <a
            href={`#category-${cat.id}`}
            class="px-6 py-3 bg-white/10 hover:bg-white/20 border border-white/20 rounded-full transition text-white font-bold text-lg"
          >
            {cat.emoji} {cat.label}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Tools by Category -->
  {categories.map((cat) => {
    const tools = toolsByCategory[cat.id];
    if (tools.length === 0) return null;
    return (
      <section id={`category-${cat.id}`} class="section light py-20 scroll-mt-24">
        <div class="container max-w-7xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-black text-center mb-16 text-black">
            {cat.emoji} {cat.label}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {tools.map((tool) => (
              <a
                href={`/tools/${toSlug(tool.id)}`}
                class="glass-card p-10 group hover:border-accent hover:-translate-y-3 transition-all duration-400 block"
              >
                <div class="text-6xl mb-6">{tool.data.emoji || 'ðŸ“Š'}</div>
                <h3 class="text-2xl font-bold mb-4 group-hover:text-accent transition">{tool.data.title}</h3>
                <p class="text-lg mb-6 text-black/80">{tool.data.description}</p>
                <span class="text-accent font-bold text-xl group-hover:translate-x-3 transition inline-block">Calculate â†’</span>
              </a>
            ))}
          </div>
        </div>
      </section>
    );
  })}

  <!-- Link to Growth Calculators -->
  <section class="section dark py-16 text-center">
    <div class="container max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold mb-4">Growth Metrics Tools</h2>
      <p class="text-white/80 mb-8">
        CAC, LTV, churn, ROAS, MRR forecast â€” our core growth calculators for SaaS and e-commerce.
      </p>
      <a
        href="/resources/calculators"
        class="inline-block px-8 py-4 bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl transition text-white font-bold"
      >
        View Growth Calculators â†’
      </a>
    </div>
  </section>

  <!-- CTA -->
  <section class="section dark py-20 text-center">
    <div class="container max-w-5xl mx-auto">
      <h2 class="text-5xl md:text-7xl font-black gradient-text mb-12">
        Ready to Turn Insights Into Revenue?
      </h2>
      <p class="text-2xl text-white/90 mb-16 max-w-4xl mx-auto">
        These calculators reveal opportunities. Our audit turns them into predictable growth.
      </p>
      <a href="/audit" class="inline-block px-8 py-6 sm:px-16 sm:py-8 text-xl sm:text-3xl bg-[#FFFFFF] text-black font-bold rounded-3xl hover:scale-105 hover:bg-[#FFE5A0] transition shadow-2xl ring-2 ring-white/40 ring-offset-2 ring-offset-[#0B0B0F]">
        Get Your Free Growth Audit
      </a>
    </div>
  </section>
</BaseLayout>
